{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "declaration": true,
    "types": [
      "vite/client",
      "node",
      "vitest",
      "@testing-library/jest-dom"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src"
  ]
}
