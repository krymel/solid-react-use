{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "declaration": true,
    "types": [
      "node",
      "vitest",
      "@testing-library/jest-dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src"
  ]
}
