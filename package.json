{
  "name": "solid-react-use",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "description": "Feels like React, but it's Solid.",
  "keywords": [
    "solid",
    "react-use",
    "hooks",
    "TypeScript"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean && tsc -p tsconfig.dist.json",
    "build": "ts-node-esm build.ts",
    "watch": "microbundle watch",
    "postbuild": "cp package.json .npmignore README.md LICENSE dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --verbose --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --verbose --watch --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --verbose --runInBand",
    "prerelease": "yarn build",
    "release": "cd dist && yarn publish",
    "format:fix": "pretty-quick --verbose --pattern 'src/**/*.ts{,x}'",
    "format:fix:staged": "yarn format:fix --staged",
    "format:check": "pretty-quick --check --verbose --pattern 'src/**/*.ts{,x}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krymel/solid-react-use.git"
  },
  "author": "krymel <krymel@mailbox.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krymel/solid-react-use/issues"
  },
  "dependencies": {
    "solid-js": "*",
    "solid-use": "*"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "esbuild": "^0.15.14",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "tabular-filesize-gzip": "^2.0.6"
  }
}
